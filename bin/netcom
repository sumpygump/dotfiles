#!/bin/bash

echo "Linux Net Commands"
echo "-------------------------------------------------------------------------------"
echo "Display Current Config for all NIC's : ifconfig"
echo "Display Current Config for eth0      : ifconfig eth0"
echo "Assign IP                            : ifconfig eth0 192.168.1.2"
echo "Ping                                 : ping -c 3 192.168.1.1"
echo "Assign multiple IPs                  : ifconfig eth0:0 192.168.1.2"
echo "Assign second IP                     : ifconfig eth0:1 192.168.1.3"
echo "Disable network card                 : ifconfig eth0 down"
echo "Enable network card                  : ifconfig eth0 up"
echo "View current routing table           : route \"or\" route -n"
echo "View arp cache                       : arp \"or\" arp -n"
echo "Assign IP/Subnet                     : ifconfig eth0 192.168.1.2 netmask 255.255.255.0"
echo "Assign Default Gateway               : route add default gw 192.168.1.1"
echo "Trace Route                          : traceroute www.whatismyip.com"
echo "Trace Path                           : tracepath www.whatismyip.com"
echo "DNS Test                             : host www.whatismyip.com"
echo "Advanced DNS Test                    : dig www.whatismyip.com"
echo "Reverse Lookup                       : host 66.11.119.69"
echo "Advanced Reverse Lookup              : dig -x 66.11.119.69"
echo "Ping to a port                       : nmap -p 9000 www.whatismyip.com"
